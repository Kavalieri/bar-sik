{
  "threshold": 10,
  "minTokens": 25,
  "minLines": 3,
  "maxLines": 1000,
  "maxSize": "500kb",
  "include": ["**/*.gd"],
  "exclude": [
    "**/node_modules/**",
    "**/.git/**",
    "**/build/**",
    "**/builds/**",
    "**/dist/**",
    "**/.godot/**",
    "**/.import/**",
    "**/addons/**",
    "**/debug/**",
    "**/tests/**",
    "**/*.uid",
    "**/*.import"
  ],
  "reporters": ["console", "html", "json"],
  "output": "./reports",
  "format": "python",
  "blame": false,
  "ignorePattern": [
    "func _ready\\(\\):\\s*$",
    "extends (Control|Node|Node2D|Resource|RefCounted)\\s*$",
    "signal \\w+.*$",
    "print\\s*\\(",
    "^\\s*##.*$",
    "^\\s*#.*$",
    "@onready var \\w+:",
    "@export var \\w+:",
    "layout_mode = \\d+",
    "anchor_\\w+ = [0-9.]+",
    "size_flags_\\w+ = \\d+",
    "^\\s*pass\\s*$",
    "class_name \\w+",
    "const \\w+ = .*",
    "var \\w+: \\w+ = .*"
  ],
  "ignoreCase": false,
  "gitignore": true,
  "silent": false,
  "verbose": true,
  "debug": false,
  "noSymlinks": true,
  "skipLocal": false,
  "mode": "mild"
}
